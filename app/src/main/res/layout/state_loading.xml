<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:gbp="http://schemas.android.com/apk/res-auto">

    <com.jpardogo.android.googleprogressbar.library.GoogleProgressBar
        android:id="@+id/pb_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        gbp:type="folding_circles"/>

    <TextView
        android:id="@+id/state_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/MSB20"
        android:text="@string/action_loading"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pb_state"
        app:layout_constraintStart_toStartOf="@+id/pb_state"
        app:layout_constraintTop_toBottomOf="@+id/pb_state" />

</androidx.constraintlayout.widget.ConstraintLayout>