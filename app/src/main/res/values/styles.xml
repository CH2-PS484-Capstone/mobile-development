<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainCard" >
        <item name="android:background">@drawable/background_white500_with_radius</item>
        <item name="android:padding">20dp</item>
    </style>


    <!-- font style -->
    <style name="MB36">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="MB24">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MSB20">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MSB16">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LSB16">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/lato_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LR16">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LSB14">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/lato_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LR14">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LR12">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LR10">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">10sp</item>
    </style>


    <style name="TextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:background">@drawable/input_text_bg</item>
    </style>

    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/primary_500</item>

    </style>

    <style name="BarActiveItem" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>



</resources>